<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-left">
        <%= image_tag @user.avatar_url, class: 'media-object' %>
      </div>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if has_posts? %>
  <h2>Posts</h2>
  <%= render @user.posts %>
  
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
  <h2><%= @user.name %> has not submitted any posts yet.</h2>
<% end %>

<h2>Favorited Posts</h2>
<% @user.favorites.each do |fav| %>
  <%= render partial: 'votes/voter', locals: { post: fav.post } %> <h3><%=fav.post.title %></h3> 
  <p>Comments: <%= fav.post.comments.count %></p>
  <%= display_fav_post(fav.post) %>
<% end %>
