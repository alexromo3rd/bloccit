<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Advertisements</p>
    <ul>
      <li>No crappy stuff</li>
      <li>Keep it PG13</li>
      <li>Bonus points for tech ads</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter advertisement body" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, rows: 4, class: 'form-control', placeholder: "Enter cost of item you're advertising" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save" %>
        </div>
    <% end %>
  </div>
</div>